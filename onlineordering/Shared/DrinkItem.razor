<div class="cart-item">
    <a @onclick="OnRemoved" class="delete-item">x</a>
    <div class="title">@Drink.Drink.DrinkName</div>
    <div class="item-price">
        @Drink.GetFormattedPrice
    </div>
</div>

@code {
    [Parameter] public DrinkOrderItem Drink { get; set; }
    [Parameter] public EventCallback OnRemoved { get; set; }
}